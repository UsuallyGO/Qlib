#!/bin/sh

func_help(){
    echo \'build_qlib\' build the Qlib and depended libraries.
    echo Usage: $* [OPTIONS]...
    echo Options:
    echo "-d, --debug    Build with debug information."
    echo "-h, --help     Shows Qlib build help message."
    echo "--prefix DIR   Specify install directory [default /usr/local]."
    echo "--clean        Remove all files created by build system."
}

func_mkdir(){
    if test -n $1; then
      if test ! -d $1; then
        echo [Creates directory $1]
        mkdir $1
        if test ! -d $1; then
          echo Failed to create directory.
          exit -1
        fi
      fi
    fi
}

cur_dir=$PWD
cd $(dirname $0)
cd ..
src_dir=$PWD
cd $cur_dir

opt_debug=false
opt_prefix=/usr/local
opt_clean=false

while test $# -gt 0; do
    opt=$1
    shift
    case $opt in
      -d|--debug) opt_debug=:
                  ;;
      -h|--help)  func_help $0
                  exit 0
                  ;;
      --prefix)   opt_prefix=$1
                  shift
                  ;;
      --clean)    opt_clean=:
                  ;;
      *)          func_help $0
                   exit 0
                  ;;
    esac
done

cmake_debug="-DCMAKE_BUILD_TYPE=RELEASE"
if $opt_debug; then
    cmake_debug="-DCMAKE_BUILD_TYPE=DEBUG"
fi

cmake_install="install"

echo $(basename $0) is building Qlib
func_mkdir qlib; cd qlib
MAKE=make
MAKEFILE="CodeBlocks - Unix Makefiles"
Q_lib=libqin.so
case "$(uname)" in
  MINGW32*)
    MAKE=mingw32-make
    MAKEFILE="CodeBlocks - MinGW Makefiles"
    Q_lib=libqin.dll.a
    ;;
esac
#"sh -c" is required by msys shell
sh -c "cmake -G\"$MAKEFILE\" -DCMAKE_INSTALL_PREFIX=$opt_prefix $cmake_debug $src_dir/src/"
echo [Make Qlib]; $MAKE
if test ! -f $opt_prefix/lib/$Q_lib \
|| test $Q_lib -nt $opt_prefix/lib/$Q_lib; then
   echo [Install Qlib]
   $MAKE $cmake_install
fi
